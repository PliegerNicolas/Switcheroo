<h1 class="mt-5">My Dashboard</h1>
<div class="mt-4">
    <p class="h3">Orders</p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Owner</th>
            <th scope="col">Renter</th>
            <th scope="col">Due Date</th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
                <tr>
                    <th scope="row">
                        <%= order.id %>
                    </th>
                    <td>
                        <%= current_user.username %>
                    </td>
                    <td>
                        <%= order.renter_id %>
                    </td>
                    <td>
                        <%= order.start_date %>
                        <%= order.end_date %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="mt-4">
    <p class="h3">Instruments</p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            <% @instruments.each do |instrument| %>
                <tr>
                    <th scope="row">
                        <%= instrument.id %>
                    </th>
                    <td>
                        <%= link_to instrument.name, root_path %>
                    </td>
                    <td>
                        <%= instrument.price %>
                    </td>
                    <td>
                        <%= instrument.status %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

</div>
