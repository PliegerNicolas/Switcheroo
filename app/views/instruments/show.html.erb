<div class="container">

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item"><a href="#">Ad</a></li>
      <li class="breadcrumb-item active" aria-current="page">ID1234</li>
    </ol>
  </nav>

  <div class="bg white">
    <div section="container">

      <div class="instrument-card">

        <div class="instrument-information">
          <% unless @instrument.photos.attachments.count == 0 %>
            <div class="instrument-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @instrument.photos.attachments.first.key, height: 300, width: 400, crop: :fill %>')"></div>
          <% else %>
            <div class="instrument-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path 'default_instrument_image', height: 300, width: 400, crop: :fill %>')"></div>
          <% end %>
          <div class="bg-white instrument-details">
            <div>
              <h1><%= @instrument.name %></h1>

            </div>

            <div class="instrument-price">
              <h3><%= @instrument.price %>€/hour</h3>
            </div>

          </div>
        </div>

        <div class="extra-info">
          <div class="bg-white owner-info">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
            <strong><%= link_to @instrument.user.username, user_path(@instrument.user.id) %></strong>
            <div class="col-xs-3 user-rating cn">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
      </div>
          </div>

              <div class="bg-white instrument-map">
                <%= image_tag "map.png" ,width: 300 %>
              </div>
            </div>


      </div>

      <div class="choose-dates">
        <div class="small-text">
          <p>Choose dates:</p>
        </div>
        <div class="pick-dates-pannel">
          <div class="col-xs-5 form-style">
            <%= simple_form_for :date_select, method: "get", :html=> { class: "form-inline" } do |f| %>
              <span><i class="fas fa-calendar"></i></span>
            <%= f.input :starts_at, label: false, as: :string, required: false, input_html: { placeholder: 'From', class: "datepicker start-date border-0", id: "startDate" } %>
              <span><i class="fas fa-long-arrow-alt-right"></i></span>
              <span><i class="fas fa-calendar"></i></span>
            <%= f.input :ends_at, label: false, as: :string, required: false, input_html: { placeholder: 'Until', class: "datepicker end-date border-0", id: "endDate" } %>
          </div>
          <%= f.button :submit, "Book", class: "btn btn-primary submit" %>
          <% end %>
        </div>
      </div>

      <p>
      <div class="total-cost" id="quick-booking-total-cost" style="display: block;">
      <div class="row">
        <div class="col-xs-6 text-left">
          Total cost
        </div>
        <div class="col-xs-6 text-right">
          <select onChange="calcPrice()"name="carType" id="group"></select>
          <span id="booking-cost-">€100.00</span><strong></strong>
        </div>
      </div>
    </div>
    </p>


      <div class="paragraph">
        <p> Guitarra em ótimo estado. Setup feito recentemente.</p>
      </div>

      </div>
  </div>
  <%= link_to "Back to all instruments", root_path %>
</div>
